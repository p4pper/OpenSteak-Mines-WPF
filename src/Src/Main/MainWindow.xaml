<Window x:Class="OpenSteak_Mines_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenSteak_Mines_WPF"
        mc:Ignorable="d"
        Title="OpenSteakWPF" Height="600" Width="702" Background="#FF0D1B2A" Closed="Window_Closed"

        >
    <Window.Resources>

    </Window.Resources>

    <Grid RenderTransformOrigin="0.513,0.503">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="CashOutOrStartButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="200"  Foreground="White" Margin="25,216,0,0" Click="CashOutOrStartButton_Click" FontSize="16" FontFamily="Open Sans" Style="{DynamicResource BetButton}"/>
        <Grid x:Name="MinesGrid" Margin="270,54,29,50">
            <!-- The buttons will be added dynamically in the code-behind -->
        </Grid>
        <ComboBox x:Name="mineCombo" HorizontalAlignment="Left" Margin="105,164,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="1" FontSize="18" Height="30" />
        <Label Content="Mines&#xD;&#xA;" HorizontalAlignment="Left" Height="30" Margin="25,164,0,0" VerticalAlignment="Top" Width="75" Foreground="White" FontSize="18"/>
        <Label Content="Amount" HorizontalAlignment="Left" Height="30" Margin="25,127,0,0" VerticalAlignment="Top" Width="75" Foreground="White" FontSize="18"/>
        <TextBox x:Name="betAmountTxt" HorizontalAlignment="Left" Margin="105,129,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" FontSize="18" Height="26"/>
        <Label x:Name="playerBalText" Content="Balance: $5.00" HorizontalAlignment="Center" Height="42" Margin="0,12,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" FontFamily="Calibri"/>
        <Label x:Name="payoutMultiplierLbl" Content="0.00x" HorizontalAlignment="Left" Height="30" Margin="105,94,0,0" VerticalAlignment="Top" Width="120" Foreground="White" FontSize="18" FontFamily="Spotify Mix"/>
        <Label x:Name="errorMsgLabel" Content="error.msg" HorizontalAlignment="Left" Height="39" Margin="25,59,0,0" VerticalAlignment="Top" Foreground="#FFF12B2B" FontSize="18" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.895"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.234"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Return" HorizontalAlignment="Left" Height="30" Margin="25,92,0,0" VerticalAlignment="Top" Width="75" Foreground="White" FontSize="18"/>


        <Border x:Name="PopupBorder"
        Width="319" Height="121"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="313,216,0,0"
        Background="#FF1F3246"
        CornerRadius="8"
        RenderTransformOrigin="0.5,0.5"
        Visibility="Collapsed">

            <Border.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>

            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>

                        <!-- SHOW ANIMATION -->
                        <Trigger Property="Visibility" Value="Visible">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="ShowStoryboard">
                                    <Storyboard FillBehavior="Stop">
                                        <!-- Reset after finished -->
                                        <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                    From="0" To="1"
                                    Duration="0:0:0.3"
                                    AccelerationRatio="0.3"
                                    DecelerationRatio="0.3"/>

                                        <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                    From="0" To="1"
                                    Duration="0:0:0.3"
                                    AccelerationRatio="0.3"
                                    DecelerationRatio="0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>

                        <!-- HIDE ANIMATION -->
                        <Trigger Property="Visibility" Value="Collapsed">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="HideStoryboard">
                                    <Storyboard FillBehavior="Stop">
                                        <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                    From="1" To="0"
                                    Duration="0:0:0.5"
                                    AccelerationRatio="0.3"
                                    DecelerationRatio="0.3"/>

                                        <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                    From="1" To="0"
                                    Duration="0:0:0.5"
                                    AccelerationRatio="0.3"
                                    DecelerationRatio="0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </Border.Style>

            <!-- Content -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label x:Name="BetReturnTotalMoneyBeauty"
               Foreground="#FF49C146"
               FontSize="36"
               Content="$0.00"
               FontWeight="Bold"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>

                <Label x:Name="BetReturnLabelBeauty" Content="0.00x"
               Foreground="White"
               FontSize="22"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
